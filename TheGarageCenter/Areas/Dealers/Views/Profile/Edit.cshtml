@model TheGarageCenter.Areas.Dealers.ViewModels.DealerProfileViewModel
@{
    ViewBag.Title = "Edit Profile";
}

<h2 class="section-title">Edit Profile.</h2>

@using (Html.BeginForm("Edit", "Profile", new { area = "Dealers" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "val-text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "val-text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "val-text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Brand)
        @Html.DropDownListFor(m => m.Brand, new SelectList(Model.Brands, "Id", "Name"), "", new { @class = "form-control", @disabled = "disabled" })
        @Html.ValidationMessageFor(m => m.Brand)
    </div>

    <button type="submit" class="btn btn-original">Save</button>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}





