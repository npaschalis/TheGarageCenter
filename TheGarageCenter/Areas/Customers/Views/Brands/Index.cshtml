@model TheGarageCenter.ViewModels.BrandViewModel
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="cards-group cards-group-logged-in">
        @foreach (var dealer in Model.Dealers)
        {
            <a class="link-to-appointment" href="@Url.Action("Create", "Appointments", new { id = dealer.Id })">
                <div class="card">
                    <div class="card-left">
                        <div class="card-row"></div>
                        <div class="card-row">
                            <h3>@dealer.Name</h3>
                        </div>
                        <div class="card-row">@dealer.Address</div>

                    </div>
                    <div class="card-right">
                        <p class="name">@Model.Brand.Name</p>
                    </div>
                </div>
            </a>
        }
    </div>
</div>



